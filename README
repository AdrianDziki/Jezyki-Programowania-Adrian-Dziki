programy
#include<stdio.h>

#deszukaj zerafine N 20

int szukajzera(double tab[N])
{
  int i=0;
  while(i<=N)
    {
     if (tab[i] == 0)
       {
         return i;
       }
       i++;
    }
 return i;
}

main () 
{
  double  tab[N];
  int i;
  printf("\n");
  for (i=0; i<N; i=i+1) 
  {
    printf("  a[%2i] == ", i); 
    scanf("%lf", &tab[i]);
  }
  i = szukajzera(tab);
  if (i < N)
    printf("\n  Pierwsze zero w  tab  jest na pozycji %i.\n\n", i);
  else
    printf("\n  W  tab  nie ma zer.\n\n");
    
}
